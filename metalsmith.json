{
  "destination": ".",
  "plugins": {
    "metalsmith-markdown": {
      "smartypants": true,
      "gfm": true
    },
    "metalsmith-templates": {
      "directory": "./",
      "engine": "handlebars",
      "pattern": "*.html",
      "default": "templates/index.html"
    },
    "metalsmith-permalinks": {}
  }
}
